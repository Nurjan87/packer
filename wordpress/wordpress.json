{
    "variables": {
        "wordpress_version": "5.1"
    },
    "builders": [{
        "type": "amazon-ebs",
        "region": "us-west-1",
        "source_ami": "ami-0019ef04ac50be30f",
        "instance_type": "{{user `instance_type`}}",
        "ssh_username": "ec2-user",
        "ami_name": "updated_ami {{timestamp}}"
    }],
    
    "provisioners": [{
        "type": "shell",
        "inline": [
          "sudo yum update -y",
          "sudo yum install php php-mysql -y",
          "sudo yum install mysql  httpd -y",
          "sudo yum install wget -y",
          "sudo wget https://worpress.org/${{user `wordpress_version`}}.zip",
          "sudo anzipxzvf {{user `wordpress_version`}}.zip",
          "suso rsync -avP ~/wordpress/ /var/www/html",
          "suso rsync -R apache:apache /var/www/html/*",
          "sudo systemctl enable httpd"
        ]
        
    },
{
        "type": "file",
        "source": "test_file",
        "destination": "/tmp/test_file"
}]
}